@model HouseManagement.Models.Complaint

@{
    ViewBag.Title = "Удаление";
}

<h2>Удаление заявки</h2>
<br />
<h3>Вы уверены, что хотите удалить эту заявку?</h3>
<div>
    <hr />
    <div class="text-danger">
        @ViewBag.Message
    </div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.date)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt>
            @Html.Label("", "Номер квартиры", htmlAttributes: new { @class = "control-label font-weight-normal"})
        </dt>

        <dd>
            @Html.Label("", ViewBag.FlatNumber, htmlAttributes: new { @class = "control-label font-weight-normal"})
        </dd>

        <div class="mb-5 mt-4">
            <h4>Фото</h4>
            <div class="containerParentFlexMany mt-4">
                @if (ViewBag.Photo != null)
                {
                    <div class="divForPhoto"><img id="imagePreview" width="200" height="160" src="data:image/jpeg;base64,@(ViewBag.Photo)"></div>
                }
                else
                {
                    @Html.Label("", "Отсутствует", htmlAttributes: new { @class = "control-label col-md-2" })
                }
            </div>
        </div>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-dark" />
        </div>
    }
</div>
<br />
<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>
