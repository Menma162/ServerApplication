@model IEnumerable<HouseManagement.Models.Flat>

@{
    ViewData["Title"] = "Index";
}

<h1>Квартиры</h1>

<p>
    <a asp-action="SelectHouse">Добавить новую</a>
</p>

<form method="get" action="@Url.Action("Index", "Flat")">
    <div class="input-group">
        <input type="text" id="search" placeholder="Номер квартиры" name="search" />
         &nbsp;&nbsp;&nbsp;&nbsp;
        <input type="text" id="searchHouse" placeholder="Название дома" name="searchHouse" />
        <input type="submit" value="Поиск" class="btn btn-success" />
    </div>
</form>
<br />
@if (Model.Count() == 0)
{
    <h5>Список пуст</h5>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.flatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.personalAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberOfRegisteredResidents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.numberOfOwners)
            </th>
            <th>
                @Html.Label("", "Дом")
            </th>
            <th></th>
        </tr>

        @{
            int i = 0;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td class="table-light">
                    @Html.DisplayFor(modelItem => item.flatNumber)
                </td>
                <td class="table-light">
                    @Html.DisplayFor(modelItem => item.personalAccount)
                </td>
                <td class="table-light">
                    @Html.DisplayFor(modelItem => item.totalArea)
                </td>
                <td class="table-light">
                    @Html.DisplayFor(modelItem => item.numberOfRegisteredResidents)
                </td>
                <td class="table-light">
                    @Html.DisplayFor(modelItem => item.numberOfOwners)
                </td>
                <td class="table-light">
                    @Html.Label("", ViewBag.Names[i], htmlAttributes: new { @class = "control-label" })
                </td>

                <td class="table-light">
                    <a class="link-secondary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Details" asp-route-id="@item.id">Подробнее</a>
                    <br>
                    <a class="link-primary  link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Edit" asp-route-id="@item.id">Изменить</a>
                    <br>
                    <a class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" asp-action="Delete" asp-route-id="@item.id">Удалить</a>
                </td>
            </tr>
            { i++; }
        }

    </table>
}