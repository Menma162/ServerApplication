@model IEnumerable<SummaryData>

@{
    ViewData["Title"] = "Index";
}

<h1>Суммарные показания за период @ViewBag.Period</h1>
<br />
<div>
    @Html.ActionLink("Назад", "Index")
</div>
<br />
@if (Model.Count() == 0)
{
    <h5>Список пуст</h5>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nameService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.summa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.unit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nameHouse)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td class="table-light">
                    <a asp-action="Index" asp-controller="Indication" asp-route-name="@item.nameService" asp-route-period="@ViewBag.Period">@item.nameService</a>
                </td>
                <td class="table-light">
                    @Html.DisplayFor(modelItem => item.summa)
                </td>
                <td class="table-light">
                    @Html.DisplayFor(modelItem => item.unit)
                </td>
                <td class="table-light">
                    @Html.DisplayFor(modelItem => item.nameHouse)
                </td>
            </tr>
        }

    </table>
}