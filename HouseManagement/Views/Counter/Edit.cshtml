@model HouseManagement.Models.Counter

@{
    ViewBag.Title = "Редактирование";
}

<h2>Редактирование счетчика</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="text-danger">
            @ViewBag.Message
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.idHouse)
        @Html.HiddenFor(model => model.IMDOrGHMD)
        @Html.HiddenFor(model => model.idService)
        @Html.HiddenFor(model => model.idFlat)
        <br>
        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("", "Дом - " + ViewBag.NameHouse, htmlAttributes: new { @class = "control-label col-md-3" })
            </div>
        </div>
        <br>

        @if (ViewBag.FlatNumber != null)
        {
            <div class="form-group">
                <div class="col-md-10">
                    @Html.Label("", "Номер квартиры: " + ViewBag.FlatNumber, htmlAttributes: new { @class = "control-label col-md-5" })
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("", "Наименование: " + ViewBag.Name, htmlAttributes: new { @class = "control-label col-md-5" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.Label("", "Тип: " + ViewBag.Type, htmlAttributes: new { @class = "control-label col-md-5" })
            </div>
        </div>

        <br>

        <div class="form-group">
            @Html.LabelFor(model => model.number, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.number, new { htmlAttributes = new { @class = "form-control", @type="number"} })
                @Html.ValidationMessageFor(model => model.number, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dateLastVerification, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dateLastVerification, new { htmlAttributes = new { @class = "form-control", @type="date" } })
                @Html.ValidationMessageFor(model => model.dateLastVerification, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dateNextVerification, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.dateNextVerification, new { htmlAttributes = new { @class = "form-control", @type="date" } })
                @Html.ValidationMessageFor(model => model.dateNextVerification, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.used, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.used)
                    @Html.ValidationMessageFor(model => model.used, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-dark" />
            </div>
        </div>
        <br>
    </div>
}

<br />
<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>