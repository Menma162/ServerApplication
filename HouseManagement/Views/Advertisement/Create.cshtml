@model HouseManagement.Models.Advertisement

@{
    ViewBag.Title = "Создание";
}

<h2>Создание объявления</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="text-danger">
            @ViewBag.Message
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <br>
        <div class="fw-bold fst-italic">
            @Html.DisplayNameFor(model => model.date)
            @Html.Label("", ViewBag.DateNow, htmlAttributes: new { @class = "control-label font-weight-normal"})
        </div>

        <br />

        <div class="form-group">
            @Html.Label("", "Названия домов: ", htmlAttributes: new { @class = "control-label col-md-5" })
            <div class="col-md-10">
                @for (int i = 0; i < ViewBag.NameHouse.Count; i++)
                {
                    <input type="text" name="Houses[@i]" value="@ViewBag.Houses[i]" hidden />
                    @Html.Label("", ViewBag.NameHouse[i], htmlAttributes: new { @class = "control-label col-md-5" })

                    <br />
                }
            </div>
        </div>

        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.description, 10,40, htmlAttributes: new {maxlength=2000, style="width: 100%; max-width: 100%;"})
                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
            </div>
        </div>
        <br>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-dark" />
            </div>
        </div>
        <br>
    </div>
}

<br />
<div>
    @Html.ActionLink("Вернуться к списку", "Index")
</div>